<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Full Menu</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <h1>Full Menu</h1>
    <% const categories = [...new Set(menu.map(dish => dish.category))];%>
    <!-- Chat-GPT -->
    <% categories.forEach( category => {%>
    <h2><%=category%></h2>
    <% menu.forEach( dish => {%> <% if(dish.category === category) {%>
    <h4><%=dish.name%><%= dish.rating === 5 ? '⭐' : '' %></h4>
    <p><%=dish.details%></p>
    <p><%=dish.rating%>/5                  $<%=dish.price%></p>
    <%}%> <%})%> <%})%>
  </body>
</html>
